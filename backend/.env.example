# Multi-Network EVM Configuration
# Copy this file to .env and fill in your values

# Bitfinity EVM Configuration
BITFINITY_PRIVATE_KEY=your_bitfinity_private_key_here
BITFINITY_API_KEY=your_bitfinity_api_key_here

# Ethereum Sepolia Testnet Configuration
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Hedera Hashgraph Configuration
# Get your testnet account from: https://portal.hedera.com/register
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=your_hedera_private_key_here
HEDERA_TESTNET_RPC_URL=https://testnet.hashio.io/api
HEDERA_MAINNET_RPC_URL=https://mainnet.hashio.io/api

# Alternative naming for compatibility with existing scripts
OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
OPERATOR_PVKEY=your_hedera_private_key_here

# Hedera SDK Configuration
HEDERA_NETWORK=testnet
DEFAULT_GAS_LIMIT=3000000
MAX_GAS_LIMIT=5000000
MAX_TRANSACTION_FEE=20
FILE_CREATE_FEE=2
FILE_APPEND_FEE=2

# Gas reporting (optional)
REPORT_GAS=false

# Coinmarketcap API key for gas reporting (optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Network selection for deployment (bitfinity_testnet|sepolia|localhost)
NETWORK=bitfinity_testnet

# Contract deployment settings
DEPLOY_ALL_STOCKS=true
VERIFY_CONTRACTS=true

# Nigerian Stock Exchange API (if needed)
NGX_API_KEY=your_ngx_api_key
NGX_API_URL=https://api.ngxgroup.com

# Frontend integration settings
GENERATE_FRONTEND_FILES=true
FRONTEND_OUTPUT_DIR=../frontend/src/contracts
FRONTEND_CONFIG_PATH=../frontend/src/config/hedera-contracts.json
